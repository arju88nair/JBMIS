<html>
<head>
    <title>JustBooksCLC</title>
    <link href="../assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="../assets/css/style.css" rel="stylesheet">
    <link href="../assets/css/sidebar.css" rel="stylesheet">
    <link rel="stylesheet" href="../assets/css/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="../assets/css/jquery-ui.css">
    <link rel="stylesheet" href="../assets/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="../assets/css/buttons.dataTables.min.css">
    <style type="text/css">
        #collectionshare_wrapper{
            margin-top: 5px;
        }
        .DTFC_LeftBodyWrapper{
            top: -14px !important;
            /*height: 410px !important;*/
        }
    </style>
</head>
<body>
<div class="container">
    <div id="wrapper">
        {{> sidebar }}
        <div class="row center_section" style="width: 110%">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <div id="amount_chart" class="loader2">

                </div>
            </div>

        </div>
        <div class="row center_section col_summary_div" style="margin-top: 31px;">
            <legend>Collection Share {{#date_show}}{{from}} to {{to}}{{/date_show}}{{^date_show}}(Current Month){{/date_show}}</legend>
            <div class="row" style="margin-left: 10px">
                <form id="form" action="/collection/" role="form" method="POST" class="form-horizontal">
                    <label for="from">From :&nbsp;&nbsp;</label>
                    <input type="text" id="from" readonly required="required" name="from">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <label for="to">To :&nbsp;&nbsp;</label>
                    <input type="text" id="to" readonly required="required" name="to">
                    <input type="submit" class="btn btn-primary" value="submit" name="submit"/>
                </form>
            </div>
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12" style="background-color: white">
                <table class="table table-striped table-responsive" style="margin-top: 5px">
                    <thead style="background-color: #1ABB9C;color: white;">
                    <th class="table_head"></th>
                    <th class="table_head">Signups</th>
                    <th class="table_head">Signups Revenue</th>
                    <th class="table_head">Renewals</th>
                    <th class="table_head">Renewals Revenue</th>
                    <th class="table_head">Others</th>
                    <th class="table_head">MTD Total</th>
                    <th class="table_head">MTD JB</th>
                    <th class="table_head">MTD Franchisee</th>
                    <th class="table_head">YTD Total</th>
                    <th class="table_head">YTD JB</th>
                    <th class="table_head">YTD Franchisee</th>
                    </thead>
                    <tbody>
                    <tr style="background-color: white !important;text-align: center">
                        <td>Total</td>
                        <td>{{signups}}</td>
                        <td>{{jb_sign}}</td>
                        <td>{{renewals}}</td>
                        <td>{{jb_renewal}}</td>
                        <td>{{others}}</td>
                        <td>{{mtd_total}}</td>
                        <td>{{mtd_jb}}</td>
                        <td>{{mtd_br}}</td>
                        <td>{{ytd_total}}</td>
                        <td>{{ytd_jb}}</td>
                        <td>{{ytd_br}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <hr />
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 col_details_div">
                <table class="table table-striped table-responsive" id="collectionshare" style="margin-top: 20px;font-size: 13px;">
                    <thead style="background-color: #1ABB9C;color: white;">
                    <tr>
                        <th></th><th></th><th></th><th></th><th></th><th></th>
                        <th colspan="3" class="text-center">MTD</th>
                        <th colspan="3" class="text-center">YTD</th>
                        <th></th>
                    </tr>
                    <tr>
                        <th class="text-right">Franchisee Name</th>
                        <th class="table_head">Signups Count</th>
                        <th class="table_head">Signups Revenue</th>
                        <th class="table_head">Renewals Count</th>
                        <th class="table_head">Renewals Revenue</th>
                        <th class="table_head">Others</th>
                        <th class="table_head">Total</th>
                        <th class="table_head">JB Total</th>
                        <th class="table_head">Franchisee Total</th>
                        <th class="table_head">Total</th>
                        <th class="table_head">JB Total</th>
                        <th class="table_head">Franchisee Total</th>
                        <th class="table_head">Avg Circulation</th>
                    </tr>
                    </thead>
                    <tbody style="color: #73879C;">
                    {{# collection}}
                        <tr>
                            <td class="text-right" style="background-color: #1ABB9C;color: white;font-weight: bold;">{{BRANCHNAME}}</td>
                            <td class="text-center" style="background-color: #E0F7DF;color: black;">{{SIGNUPS_CNT}}</td>
                            <td class="text-center" style="background-color: #E0F7DF;color: black;">{{SIGNUPS}}</td>
                            <td class="text-center" style="background-color: #E0F7DF;color: black;">{{RENEWALS_CNT}}</td>
                            <td class="text-center" style="background-color: #E0F7DF;color: black;">{{RENEWALS}}</td>
                            <td class="text-center" style="background-color: #E0F7DF; color: black">{{OTHERS}}</td>
                            <td class="text-center" style="background-color: #BEF9BB; color: black">{{MTD_TOTAL}}</td>
                            <td class="text-center" style="background-color: #BEF9BB; color: black">{{MTD_JB_TOTAL}}</td>
                            <td class="text-center" style="background-color: #BEF9BB; color: black">{{MTD_BRANCH_TOTAL}}</td>
                            <td class="text-center" style="background-color: #E0F7DF; color: black">{{YTD_TOTAL}}</td>
                            <td class="text-center" style="background-color: #E0F7DF; color: black">{{YTD_JB_TOTAL}}</td>
                            <td class="text-center" style="background-color: #E0F7DF; color: black">{{YTD_BRANCH_TOTAL}}</td>
                            <td class="text-center" style="background-color: #BEF9BB; color: black">{{STC}}</td>
                        </tr>
                    {{/ collection}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>
</div>
</body>
<script src="../assets/js/jquery.min.js"></script>
<script src="../assets/js/bootstrap.min.js"></script>
<script src="../assets/js/jquery.tablesorter.js"></script>
<script src="../assets/js/jquery.dataTables.min.js"></script>
<script src="../assets/js/dataTables.bootstrap.min.js"></script>
<script src="../assets/js/jquery-ui.js"></script>
<script src="../assets/js/highchart/highcharts.js"></script>
<script src="../assets/js/highchart/highcharts-3d.js"></script>
<script src="../assets/js/highchart/modules/exporting.js"></script>
<script src="../assets/js/dataTables.fixedCol.js"></script>
<script src="../assets/js/dataTables.buttons.min.js"></script>
<script src="../assets/js/buttons.flash.min.js"></script>
<script src="../assets/js/jszip.min.js"></script>
<script src="../assets/js/chart_api.js?v=1"></script>
<script src="../assets/js/pdfmake.min.js"></script>
<script src="../assets/js/buttons.html5.min.js"></script>
<script src="../assets/js/buttons.print.min.js"></script>
<script>
    $(document).ready(function() {
        $("#collectionshare").DataTable({
            scrollY: 500,
            scrollX: true,
            scrollCollapse: true,
//            paging: false,
            fixedColumns: true,
            fixedHeader: true,
            "aoColumnDefs": [
                { 'bSortable': false, 'aTargets': [ 1,2 ] }

            ],
            dom: 'lBfrtip',
            buttons: [
                'csv', 'excel'
            ]
        });
        var dateObj=new Date();
        var year=dateObj.getFullYear();
        var month=dateObj.getMonth()+1;
        var date=dateObj.getDate();
//        var today_date=date+'-'+month+'-'+year;
        if(date.toString().length <= 1) {
            date = '0' + date;
        }
        var today_date=year+'-'+month+'-'+date
        $( "#from" ).datepicker({
            dateFormat:'dd-M-yy',
            changeMonth: true,
            onClose: function( selectedDate ) {
                $( "#to" ).datepicker( "option", "maxDate", "0" );
            }
        }).val();
        $( "#to" ).datepicker({
            dateFormat:'dd-M-yy',
            changeMonth: true,
            onClose: function( selectedDate ) {
                $( "#from" ).datepicker( "option", "maxDate", "0" );
            }
        }).val();
    } );
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });
    $('li:contains("Collection")').addClass('active').addClass('navbar-list');
</script>
</html>